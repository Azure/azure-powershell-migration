{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2019",
		"outDir": "out",
		"lib": ["es2019"],
		"sourceMap": true,
		"rootDir": "src",
        /* Strict Type-Checking Option */
        "strict": true,   /* enable all strict type-checking options */
        /* Additional Checks */
        "noUnusedLocals": true /* Report errors on unused locals. */
	},
	"exclude": [
		"node_modules",
	]
}
