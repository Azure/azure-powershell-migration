{
	"name": "azps-tools",
	"displayName": "Azure PowerShell Tools",
	"description": "(preview) Automate the migration of Azure PowerShell scripts and modules from AzureRM to the Az PowerShell module.",
	"version": "0.2.0",
	"publisher": "azps-tools",
	"license": "MIT",
	"icon": "logo.png",
	"preview": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/Azure/azure-powershell-migration.git"
	},
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Azure"
	],
	"activationEvents": [
		"onLanguage:powershell"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"title": "Migrate Azure PowerShell Script",
				"command": "azps-tools.selectVersion"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"node-powershell": "^4.0.0"
	},
	"devDependencies": {
		"@types/vscode": "^1.47.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "^13.13.51",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
